<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="40dp"
        android:textSize="23sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="每日打卡"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:id="@+id/daka_month"
        android:text=""
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_horizontal" />
    <com.othershe.calendarview.weiget.WeekView
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <com.othershe.calendarview.weiget.CalendarView
        xmlns:calendarview="http://schemas.android.com/apk/res-auto"
        calendarview:choose_color="@color/grey"
        calendarview:day_bg="@drawable/daka"
        calendarview:choose_type="multi"
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="220dp" />
    <Button
        android:id="@+id/daka"
        android:onClick="tianjiadaka"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="打卡"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="每日一句"
        android:textSize="19sp"/>
    <TextView
        android:id="@+id/mryj_yw"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/mryj_zw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>