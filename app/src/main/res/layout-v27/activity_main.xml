<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = ".MainActivity">
    <ImageView
        android:id="@+id/image_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"/>
<LinearLayout
    android:id="@+id/main_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/textname" />
        <EditText
            android:id="@+id/search_text"
            android:paddingLeft="5dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/main_search"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:hint="输入你要查询的单词"
            android:textSize="10sp"
            android:autofillHints="@android:string/autofill"
            android:background="@drawable/main_et_bg"
            android:layout_alignRight="@id/main_title"/>
        <ImageView
            android:id="@+id/main_search"
            android:layout_width="20dp"
            android:onClick="search"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/btn_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="10dp">
        <RadioButton
            android:id="@+id/siji_rtb"
            android:background="@color/grey"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="大学英语四级" />
        <RadioButton
            android:id="@+id/liuji_rtb"
            android:background="@color/grey"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="大学英语六级" />
        <RadioButton
            android:id="@+id/tuofu_rtb"
            android:layout_weight="1"
            android:padding="20dp"
            android:background="@color/grey"
            android:layout_margin="5dp"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="托福" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView
            android:id="@+id/jihua"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计划"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/num"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="该计划一共有这么多个单词"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/day"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="你要需要学习"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/wordday"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="那么你每天要背"/>
            <TextView
                android:id="@+id/num_sp"
                android:layout_marginTop="18dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个单词"/>
        </LinearLayout>
        <Button
            android:id="@+id/gotoxuexi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/g"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:onClick="gotoxuexiclick" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--这里我就放了个自定义的布局，其他啥也没放，所以就只有一个顶部栏-->
        <include layout="@layout/top_view_bar"
            android:id="@+id/top_view_bar"/>
    </LinearLayout>
    <!--侧滑界面,必须设置layout_gravity属性,表示侧滑方向-->
    <LinearLayout
        android:layout_gravity="start"
        android:id="@+id/menu"
        android:background="@drawable/bg_nav"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/username_show"
            android:paddingTop="40dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn1"
            android:onClick="menuClick"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="背单词"/>
        <Button
            android:onClick="menuClick"
            android:id="@+id/btn2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="错词本"/>
        <Button
            android:onClick="menuClick"
            android:id="@+id/btn3"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打卡记录"/>
        <Button
            android:onClick="menuClick"
            android:id="@+id/btn4"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登陆"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>